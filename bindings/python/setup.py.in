from setuptools import setup, Extension

top_srcdir = "@abs_srcdir@";
apr_cflags = "@APR_CFLAGS@";
apr_libs = "@APR_LIBS@";
apu_cflags = "@APU_CFLAGS@";
apu_libs = "@APU_LIBS@";

all_flags = apr_cflags + " " + apr_libs + " " + apu_cflags + " " + apu_libs;

define_macros = [];
include_dirs = [top_srcdir, top_srcdir + "/../../libjxtl", top_srcdir + "/../../bindings/include"];
library_dirs = ["@libdir@"];
libraries = ["jxtl-1.0"];
extra_compile_args = [];

# Parse the flags
for token in all_flags.split():
    if token[:2] == "-D":
        define_macros.append((token[2:], None));
    elif token[:2] == "-I":
        include_dirs.append(token[2:]);
    elif token[:2] == "-L":
        library_dirs.append(token[2:]);
    elif token[:2] == "-l":
        libraries.append(token[2:]);
    else:
        extra_compile_args.append(token);

libjxtl_module = Extension('_libjxtl',
                           sources = ['libjxtl_wrap.c', 'template_funcs.c',
                                      'py_util.c'],
                           define_macros = define_macros,
                           include_dirs = include_dirs,
                           library_dirs = library_dirs,
                           libraries = libraries);

setup(name = 'libjxtl',
      version = '@PACKAGE_VERSION@',
      description = "SWIG interface to LibJXTL",
      author = "Dan Rinehimer",
      author_email="rinehimer@gmail.com",
      url="https://github.com/rinehimer/jxtl",
      python_requires = ">=3",
      ext_modules = [libjxtl_module],
      py_modules = ["libjxtl"]
);
